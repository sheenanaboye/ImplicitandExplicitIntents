<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherActivity">

    <Button
        android:id="@+id/phoneSettings"
        android:layout_width="233dp"
        android:layout_height="38dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="89dp"
        android:text="SETTINGS"
        android:textColor="#4CAF50"
        app:backgroundTint="#804CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createSMS"
        android:layout_width="234dp"
        android:layout_height="43dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="89dp"
        android:text="SMS"
        android:textColor="#4CAF50"
        android:textColorHighlight="#4CAF50"
        android:textColorHint="#4CAF50"
        android:textColorLink="#4CAF50"
        app:backgroundTint="#804CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneSettings" />

    <Button
        android:id="@+id/webBrowser"
        android:layout_width="230dp"
        android:layout_height="43dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="89dp"
        android:text="BROWSER"
        android:textColor="#4CAF50"
        android:textColorHighlight="#4CAF50"
        android:textColorHint="#4CAF50"
        android:textColorLink="#4CAF50"
        app:backgroundTint="#804CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createSMS" />

    <Button
        android:id="@+id/openFacebook"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="89dp"
        android:text="FACEBOOK"
        android:textColor="#4CAF50"
        android:textColorHighlight="#4CAF50"
        android:textColorHint="#4CAF50"
        android:textColorLink="#4CAF50"
        app:backgroundTint="#804CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webBrowser" />

    <Button
        android:id="@+id/openTwitter"
        android:layout_width="230dp"
        android:layout_height="38dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="87dp"
        android:text="TWITTER"
        android:textColor="#4CAF50"
        android:textColorHighlight="#4CAF50"
        android:textColorHint="#4CAF50"
        android:textColorLink="#4CAF50"
        app:backgroundTint="#804CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openFacebook" />
</androidx.constraintlayout.widget.ConstraintLayout>